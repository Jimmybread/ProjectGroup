@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h1>创建角色</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.RoleName"></label><span class="text-danger">*</span><span class="text-danger" asp-validation-for="@Model.RoleName"></span>
                <input asp-for="@Model.RoleName" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">创建</button>
        </form>
    </div>
</div>