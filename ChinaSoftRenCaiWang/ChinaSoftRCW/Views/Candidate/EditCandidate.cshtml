@model EditCandidate
@{
    ViewData["Title"] = "EditCanddidate";
}

<form enctype="multipart/form-data" method="post" asp-controller="Candidate" asp-action="EditCandidate">
    <input type="hidden" asp-for="@Model.Id">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.FullName">姓名<span class="text-danger">*</span></label>
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            <input asp-for="@Model.FullName" type="text" class="form-control" placeholder="姓名">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Age">年龄</label>
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
            <input asp-for="@Model.Age" type="text" class="form-control" placeholder="年龄">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Phone">电话<span class="text-danger">*</span></label>
            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            <input asp-for="@Model.Phone" type="tel" class="form-control" placeholder="手机号码">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Email"></label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input asp-for="@Model.Email" class="form-control" placeholder="邮箱地址">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.TechStackId"></label><span class="text-danger">*</span>
            <span asp-validation-for="@Model.TechStackId" class="text-danger"></span>
            <select asp-for="@Model.TechStackId" asp-items="@Model.TechStacks" class="form-control">
                <option value="">请选择</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.ProjectId"></label><span class="text-danger">*</span>
            <span asp-validation-for="@Model.ProjectId" class="text-danger"></span>
            <select asp-for="@Model.ProjectId" asp-items="@Model.Projects" class="form-control">
                <option value="">请选择</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Position">职位<span class="text-danger">*</span></label>
            <span asp-validation-for="@Model.Position" class="text-danger"></span>
            <input asp-for="@Model.Position" type="text" class="form-control" placeholder="应聘职位">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.JobStateId">工作状态<span class="text-danger">*</span></label>
            <span asp-validation-for="@Model.JobStateId" class="text-danger"></span>
            <select asp-for="@Model.JobStateId" asp-items="@Model.JobStates" class="form-control">
                <option value="">请选择</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Experience">经验<span class="text-danger">*</span></label>
            <span asp-validation-for="@Model.Experience" class="text-danger"></span>
            <input asp-for="@Model.Experience" type="text" class="form-control" id="experience" placeholder="工作年限">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.GenderId">性别</label>
            <span asp-validation-for="@Model.GenderId" class="text-danger"></span>
            <select asp-for="@Model.GenderId" asp-items="@Model.Genders" class="form-control">
                <option value="">请选择</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ResidentAddress">现居住地址<span class="text-danger">*</span></label>
        <span asp-validation-for="@Model.ResidentAddress" class="text-danger"></span>
        <input asp-for="@Model.ResidentAddress" type="text" class="form-control" placeholder="省-市-区-街道-小区">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Resume">上传简历(docx/pdf/doc/txt)</label>
        <div class="custom-file">
            <input asp-for="@Model.Resume" class="form-control custom-file-input">
            <label class="custom-file-label">@Model.ResumePath?.Split('\\')?.Last()</label>
            <input type="hidden" asp-for="@Model.ResumePath">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">提交</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
